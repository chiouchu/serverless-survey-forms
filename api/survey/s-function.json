{
  "name": "survey",
  "runtime": "nodejs4.3",
  "description": "${project} - ${stage}: ${name}",
  "customName": "$${functionName}",
  "customRole": false,
  "handler": "survey/handler.handler",
  "timeout": 60,
  "memorySize": 512,
  "authorizer": {},
  "custom": {
    "excludePatterns": []
  },
  "endpoints": [
    {
      "path": "api/v1/surveys/{accountid}/{surveyid}",
      "method": "GET",
      "type": "AWS",
      "authorizationType": "none",
      "authorizerFunction": false,
      "apiKeyRequired": false,
      "requestParameters": {},
      "requestTemplates": {
        "application/json": {
          "apigw": "$${apiRequestTemplate}",
          "accountid": "$input.params('accountid')",
          "surveyid": "$input.params('surveyid')"
        }
      },
      "responses": "$${apiResponseTemplate}"
    },
    {
      "path": "api/v1/mgnt/surveys",
      "method": "GET",
      "type": "AWS",
      "authorizationType": "none",
      "authorizerFunction": false,
      "apiKeyRequired": false,
      "requestParameters": {
        "integration.request.querystring.integrationQueryParam": "method.request.querystring.startKey"
      },
      "requestTemplates": {
        "application/json": {
          "apigw": "$${apiRequestTemplate}",
          "startKey": "$input.params('startKey')"
        }
      },
      "responses": "$${apiResponseTemplate}"
    },
    {
      "path": "api/v1/mgnt/surveys",
      "method": "POST",
      "type": "AWS",
      "authorizationType": "none",
      "authorizerFunction": false,
      "apiKeyRequired": false,
      "requestParameters": {},
      "requestTemplates": {
        "application/json": {
          "apigw": "$${apiRequestTemplate}",
          "requester": "context.authorizer.principalId",
          "subject": "$input.json('$.subject')",
          "survey": "$input.json('$.survey')"
        }
      },
      "responses": "$${apiResponseTemplate}"
    },
    {
      "path": "api/v1/mgnt/surveys",
      "method": "PUT",
      "type": "AWS",
      "authorizationType": "none",
      "authorizerFunction": false,
      "apiKeyRequired": false,
      "requestParameters": {},
      "requestTemplates": {
        "application/json": {
          "apigw": "$${apiRequestTemplate}",
          "surveyid": "$input.json('$.surveyid')", 
          "subject": "$input.json('$.subject')",
          "survey": "$input.json('$.survey')"
        }
      },
      "responses": "$${apiResponseTemplate}"
    },
    {
      "path": "api/v1/mgnt/surveys/{surveyid}",
      "method": "DELETE",
      "type": "AWS",
      "authorizationType": "none",
      "authorizerFunction": false,
      "apiKeyRequired": false,
      "requestParameters": {},
      "requestTemplates": {
        "application/json": {
          "apigw": "$${apiRequestTemplate}"
        }
      },
      "responses": "$${apiResponseTemplate}"
    }    
  ],
  "events": [],
  "environment": {
    "SERVERLESS_PROJECT": "${project}",
    "SERVERLESS_STAGE": "${stage}",
    "SERVERLESS_REGION": "${region}",
    "SERVERLESS_SURVEYTABLE": "${project}-${stage}-surveys"
  },
  "vpc": {
    "securityGroupIds": [],
    "subnetIds": []
  }
}
